{% extends 'base.html.twig' %}

{% block main %}

    <div class="section main">

        <div class="container text-center">
            <h1 class="quicksand_bold title-h1 line-after-title" style="margin-top: 20px;">Modification de cours</h1>

            <table class="table text-left table-cours-select">
                <thead class="thead-light">
                <tr>
                    <th scope="col">IMG</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Axe</th>
                    <th scope="col">Type</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for allcour in allcours %}
                    <tr>
                        <td>
                             <div class="img-icone-type" style="{% if allcour.type == "image/png" %}background: url('../img/png.png') no-repeat; {% elseif allcour.type == "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" %}background: url('../img/xls.png') no-repeat; {% elseif allcour.type == "image/jpeg" %}background: url('../img/jpg.png') no-repeat; {% elseif allcour.type == "application/pdf" %}background: url('../img/pdf.png') no-repeat; {% elseif allcour.type == "application/vnd.oasis.opendocument.text" %}background: url('../img/doc.png') no-repeat; {% elseif allcour.type == "application/vnd.oasis.opendocument.formula" %}background: url('../img/doc.png') no-repeat; {% elseif allcour.type == "application/zip" %}background: url('../img/zip.png') no-repeat; {% elseif allcour.type == "application/vnd.ms-powerpoint" %}background: url('../img/ppt.png') no-repeat; {% elseif allcour.type == "application/vnd.openxmlformats-officedocument.presentationml.presentation" %}background: url('../img/ppt.png') no-repeat; {% elseif allcour.type == "application/msword" %}background: url('../img/doc.png') no-repeat; {% elseif allcour.type == "application/vnd.openxmlformats-officedocument.wordprocessingml.document" %}background: url('../img/doc.png') no-repeat;{% endif %}background-size: contain;"></div>
                        </td>
                        <td>
                            <form method="post" action="../admin_edit_cours.php">
                                <div class="row">
                                    <div>
                                        <input type="text" name="name" value="{{ allcour.name }}">
                                        <input type="hidden" name="id" value="{{ allcour.id }}">
                                    </div>
                                    <div>
                                        <button type="submit" class="btn btn-warning">Modifier</button>
                                    </div>
                                </div>
                            </form>
                        </td>
                        <td>
                            <p>{{ allcour.axe }}</p>
                        </td>
                        <td>
                            <p>{{ allcour.type }}</p>
                        </td>
                        <td>
                            <div class="row">
                                <div class="">
                                    <a href="../../{{ allcour.file }}">
                                        <div class="img-icone-voir">

                                        </div>
                                    </a>
                                </div> &nbsp;&nbsp;
                                <div class="">
                                    <a href="../../{{ allcour.file }}" download="{{ allcour.slug }}">
                                        <div class="img-icone-dl">

                                        </div>
                                    </a>
                                </div>&nbsp;&nbsp;
                                <div class="">
                                    <form method="post" action="../admin_delete_cours.php" style="margin-top: -3px;">
                                        <input type="hidden" name="name" value="{{ allcour.name }}">
                                        <input type="hidden" name="id" value="{{ allcour.id }}">
                                        <button type="submit" value="" class="img-icone-suppr" style="border: none;"></button>
                                    </form>
                                </div>
                            </div>
                        </td>


                        </th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}